<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
</head>

<body>
  <div class="container mt-4">
    <h1 class="text-center"><%= title %></h1>
    <h2 class="text-muted text-center mb-4">Welcome to our book app</h2>

    <div class="d-flex flex-wrap justify-content-center">
      <% bookList.forEach(function(book) { %>
        <div class="card shadow-sm m-2" style="width: 20rem; border-radius: 20px;">
          <div class="card-body">
            <h5 class="card-title"><%= book.title %></h5>
            <p class="card-text"><%= book.description %></p>
            <p class="card-subtitle text-muted mb-2">Genre: <%= book.genre %></p>

            <a href="/books/edit/<%= book._id %>" class="btn btn-primary btn-sm">Edit</a>
            <!-- <a href="/books/delete/<%= book._id %>" class="btn btn-danger btn-sm">Delete</a> -->
             <form method="POST" action="/books/delete/<%= book._id %>" style="display:inline;">
  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
</form>

          </div>
        </div>
      <% }); %>
    </div>

    <div class="text-center mt-4">
      <a class="btn btn-success" href="/books/add">Add Book</a>
    </div>
  </div>
</body>

</html>
